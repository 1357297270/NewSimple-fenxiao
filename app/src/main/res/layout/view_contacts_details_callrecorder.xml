<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_white_details_bg"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_list_recordings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/theme_white_details_bg"
            android:scrollbars="vertical" />
        <LinearLayout
            android:id="@+id/re_no_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/contacts_dr_empty"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/theme_gray"
                android:textSize="15sp"
                android:text="@string/contacts_recording_empty"/>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>