<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calls_item"
    android:background="@drawable/item_bg_selector"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingRight="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/calls_item_state"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:padding="14dp"
            android:src="@drawable/icon_calls_item_incoming"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/calls_item_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:gravity="bottom"
                android:text="姓名"
                android:textColor="@color/theme_black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/calls_item_num"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:gravity="top"
                android:text="111111"
                android:textColor="@color/text_color"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/calls_item_long_press"
            android:layout_width="19dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="8dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/calls_item_long_press"/>
            <ImageView
                android:id="@+id/recycler_list_arrow"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:src="@drawable/contacts_menu_arrow_arrow_blue"
                android:visibility="gone"/>

        </LinearLayout>

        <TextView
            android:id="@+id/calls_item_time"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="@color/text_color"
            android:text="10:10\n02-11"/>
        <ImageView
            android:id="@+id/calls_item_details"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/icon_calls_item_detail"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="40dp"
        android:background="@color/divide_line"/>

</LinearLayout>